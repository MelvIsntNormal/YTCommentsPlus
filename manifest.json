{
  "manifest_version": 2,
  "name": "YouTube Plus Filter",
  "version": "0.0.3",
  "version_name": "Alpha 0.3 Initial",
  "description": "Removes comments with a single plus ('+') from YouTube comment threads.",
  "minimum_chrome_version": "26",
  "permissions": ["*://*.youtube.com/*", "webNavigation", "tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts":[
      {
          "matches": ["*://*.youtube.com/*"],
          "js": ["extension.js"]
      }
  ]  
}